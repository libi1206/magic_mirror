<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="109sp"
    android:background="@drawable/music_backguound"
    android:padding="5dp">
    <ImageView
        android:layout_width="109sp"
        android:layout_height="109sp"
        android:src="@mipmap/music_img"
        android:id="@+id/music_image"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:src="@drawable/ic_music_logo"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/music_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色幽默-周杰伦"
            android:scrollbars="horizontal"
            android:textColor="@color/default_color"
            android:layout_toRightOf="@+id/music_logo"
            android:id="@+id/music_name"
            android:textSize="22sp"

            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:22/04:44"
            android:textColor="@color/default_color"
            android:layout_below="@+id/music_name"
            android:layout_alignEnd="@+id/music_name"
            android:layout_alignRight="@+id/music_name"
            android:textSize="10sp"
            android:id="@+id/music_time"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_logo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/music_seek_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_seek_bar"
            android:gravity="center">
            <Button
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/music_play"
                android:background="@drawable/music_play"/>
        </LinearLayout>
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="5sp"
            android:background="@drawable/detail"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/music_detail"/>
        <Button
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="5sp"
            android:background="@drawable/music_next"
            android:id="@+id/music_next"
            android:layout_marginRight="30sp"
            android:layout_toLeftOf="@+id/music_detail"
            android:layout_alignTop="@+id/music_detail"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</LinearLayout>